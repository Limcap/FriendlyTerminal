<Window x:Class="Limcap.TextboxTerminal.Mantest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Limcap.TextboxTerminal.Mantest"
        mc:Ignorable="d"
		  Background="Black"
        Title="Limcap Textbox Terminal" Height="450" Width="800">
			<!--
			AllowsTransparency="True" WindowStyle="None"
	<Window.Background>
		<SolidColorBrush Opacity="0.75"/>
	</Window.Background>
			-->
	<DockPanel x:Name="MainPanel" LastChildFill="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
		<TextBlock 
			Background="Black" Foreground="Cyan" Padding="5" TextWrapping="Wrap" Text="TextBlock" 
			HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="Consolas"
		/>
		<!-- 
		-->
	</DockPanel>
</Window>
